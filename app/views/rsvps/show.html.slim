h1 RSVP

p Name: #{@rsvp.name}
p Email: #{@rsvp.email_address}
p Max Attending: #{@rsvp.max_attending}

- if @rsvp.qrcode
  = image_tag @rsvp.qrcode.url, style: ""

- if @rsvp.address
  h2 Address
  = render @rsvp.address

p Song Requests:
p = @rsvp.song_requests


= link_to "Delete", rsvp_path(@rsvp), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete the invite for #{@rsvp.name}?"}