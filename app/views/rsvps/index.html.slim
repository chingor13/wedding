h1 RSVP

= render "search_form"

= link_to new_rsvp_path, class: "btn btn-default admin-shown" do
  | New Invitation

- if @rsvps.present?
  h2 Invites
  table.table.table-striped
    thead
      tr
        th
        th Name
        th Email
        th
    tbody
      - @rsvps.each do |rsvp|
        tr
          td
            - if rsvp.responded?
              - if rsvp.attending?
                span.badge.bg-success = rsvp.total
              - else
                span.glyphicon.glyphicon-minus.text-danger aria-hidden="true"
            - else
              span.badge.bg-danger ?
          td = link_to rsvp.name, rsvp
          td = rsvp.email_address
          td
            - if rsvp.notes.present?
              = link_to "#", title: rsvp.notes, data: {toggle: "tooltip"} do
                i.icon-comment &nbsp;